
mixin menu()
    .menu
        .menu__item.menu__item-home 
            .menu__txt Home
        .menu__item.menu__item-add.menu__item_hidden 
            .menu__txt Add new
        .menu__item.menu__item-lots.menu__item_hidden
            .menu__txt My lots
        .menu__item.menu__item-about 
            .menu__txt About
        .menu__wrapper.menu__item-login
            +login()
        .menu__wrapper.menu__item-search
            +search()